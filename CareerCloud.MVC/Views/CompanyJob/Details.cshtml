@model CareerCloud.Pocos.CompanyJobPoco

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Details of selected Job</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Job ID
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProfileCreated)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProfileCreated)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsInactive)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsInactive)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsCompanyHidden)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsCompanyHidden)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CompanyProfile)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CompanyProfile.Id)
        </dd>
       
    </dl>
    <dl>
        @foreach (var item in Model.CompanyJobDescription)
        {
            <dt>
                @Html.DisplayNameFor(modelItem => item.JobName)
            </dt>
            <dd>
                @Html.DisplayFor(modelItem => item.JobName)
            </dd>
            <dt>
                @Html.DisplayNameFor(modelItem => item.JobDescriptions)
            </dt>
            <dd>
                @Html.DisplayFor(modelItem => item.JobDescriptions)
            </dd>
        }
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a>    |
    <a asp-action="Index">Back to List</a>     |
    <a asp-action="ContinueUpdateJobDescription" asp-controller="CompanyJobDescription" asp-route-JobId="@Model.Id"> Add Job Description </a>    |  
    <a asp-action="ContinueUpdateJobSkill" asp-controller="CompanyJobSkill" asp-route-JobId="@Model.Id"  > Add New Job Skill</a>     |
    <a asp-action="ContinueUpdateJobEducation" asp-controller="CompanyJobEducation" asp-route-JobId="@Model.Id"> Add New Education Requirement</a>
</div>
<div>

    <partial name ="_CompanyJobSkill" model="@Model.CompanyJobSkill.ToList()" />

    <partial name="_CompanyJobEducation" model="@Model.CompanyJobEducation.ToList()" />


</div>
<div>
    <h2>Display Jobs Applications</h2>
    <a asp-action="DisplayJobForGivenJobId" asp-controller="ApplicantJobApplication" asp-route-JobId="@Model.Id"> Job Applications </a>

</div>