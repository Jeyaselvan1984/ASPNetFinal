@model CareerCloud.Pocos.CompanyJobEducationPoco

<h4>CompanyJobEducationPoco</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ContinueUpdateJobEducation">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style='display: none;'>
                <label asp-for="Job" class="control-label"></label>
                <input asp-for="Job" class="form-control" value=@ViewBag.JobId />
            </div>
            <div class="form-group" style='display: none;'>
                <label asp-for="CompanyJob.Company" class="control-label"></label>
                <input asp-for="CompanyJob.Company" class="form-control" value=@ViewBag.CompanyId />
            </div>
            <div class="form-group">
                <label asp-for="Major" class="control-label"></label>
                <input asp-for="Major" class="form-control" />
                <span asp-validation-for="Major" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Importance" class="control-label"></label>
                <input asp-for="Importance" class="form-control" />
                <span asp-validation-for="Importance" class="text-danger"></span>
            </div>
            <div class="form-group">
                @using (Html.BeginForm("CreateJobEducationCompleteJobCreation", "CompanyJobEducation"))
                {

                    <input type="submit" name="response" value="Continue Creating Job Skill" formaction=@Url.Action("CreateJobEducationCompleteJobCreation") formmethod="post" class="btn btn-primary" />

                }

            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
