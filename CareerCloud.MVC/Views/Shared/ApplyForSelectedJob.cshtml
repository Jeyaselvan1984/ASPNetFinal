@model CareerCloud.Pocos.ApplicantJobApplicationPoco

<h4>Confirm Job Application?</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ApplyForSelectedJob">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Applicant" class="control-label"></label>
                <p> @Model.ApplicantProfile.SecurityLogin.FullName</p>
            </div>
            <div class="form-group">
                <label asp-for="Job" class="control-label"></label>
                <p> @Model.Job</p>
            </div>
            <div class="form-group">
                <label asp-for="ApplicationDate" class="control-label"></label>
                <input asp-for="ApplicationDate" class="form-control" />
                <span asp-validation-for="ApplicationDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Apply" onclick="location.href='@Url.Action("OnApplyingJob", "ApplicantJobApplication")?JobId=@Model.Job &ApplicantId=@Model.Applicant'" />

            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
