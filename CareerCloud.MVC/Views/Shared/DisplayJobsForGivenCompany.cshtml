@model IEnumerable<CareerCloud.Pocos.CompanyJobPoco>

    <p>
        <h2> Displaying Jobs for Company  @ViewBag.CompanyId</h2>
        </hr>
        <a asp-action="CreateJobFlowStart" asp-controller="CompanyJob" asp-route-CompanyId="@ViewBag.CompanyId">Create New Job</a>
    </p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.ActionLink("Job Id", "DisplayJobsForGivenCompany", new { companyId = ViewBag.CompanyId, sortOrder = ViewBag.IdSortParm })
            </th>
            <th>
                @Html.ActionLink("Job Created", "DisplayJobsForGivenCompany", new { companyId = ViewBag.CompanyId,sortOrder = ViewBag.DateSortParm })
              
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsInactive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsCompanyHidden)
            </th>
            <th>
                Job Name
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProfileCreated)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsInactive)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsCompanyHidden)
            </td>
            <td>
                 @foreach (var description in item.CompanyJobDescription)
                {
                    @Html.DisplayFor(modelItem => description.JobName) 
                }
             </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
